{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "strict": true,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false, // covered by eslint
    "noImplicitOverride": true,
    "noUnusedLocals": false, // covered by eslint
    "noUnusedParameters": false, // covered by eslint
    "verbatimModuleSyntax": true,

    // TODO: Remove when lightningcss fix their package.json#exports
    "resolvePackageJsonExports": false
  },
  "exclude": ["coverage", "dist", "node_modules", "test"]
}
