{
  "private": true,
  "name": "new-tab",
  "version": "0.14.0",
  "description": "âš¡ A high performance new tab page that gets you where you need to go faster.",
  "homepage": "https://github.com/MaxMilton/new-tab",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "chrome",
    "google-chrome",
    "maxmilton",
    "ntp",
    "svelte"
  ],
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "NODE_ENV=production rollup --config",
    "prebuild": "rm -rf dist && mkdir dist && cp icon* dist",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint --ignore-path .gitignore **/*.{css,html,md}",
    "lint:js": "eslint --ignore-path .gitignore --ext html,js,md .",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.9.0-beta.7",
    "@minna-ui/eslint-config": "0.20.0",
    "@minna-ui/jest-config": "0.20.0",
    "@minna-ui/pre-markup": "0.20.0",
    "@minna-ui/pre-style": "0.20.0",
    "@minna-ui/rollup-plugins": "0.20.0",
    "@minna-ui/stylelint-config": "0.20.0",
    "@types/chrome": "0.0.78",
    "@wearegenki/renovate-config": "1.0.0",
    "autoprefixer": "9.4.7",
    "chokidar": "2.0.4",
    "codecov": "3.1.0",
    "crass": "0.12.3",
    "eslint": "5.12.1",
    "jest": "24.0.0",
    "jest-puppeteer": "3.9.0",
    "postcss": "7.0.14",
    "postcss-import": "12.0.1",
    "postcss-nested": "4.1.1",
    "prettier": "1.16.4",
    "puppeteer-core": "1.12.1",
    "rollup": "1.1.2",
    "rollup-plugin-analyzer": "3.0.0",
    "rollup-plugin-svelte": "5.0.1",
    "sinon-chrome": "2.3.2",
    "stylelint": "9.10.1",
    "svelte": "2.16.0"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "babel": {
    "presets": [
      "@minna-ui/jest-config/babel-preset.js"
    ]
  },
  "postcss": {
    "map": true,
    "plugins": {
      "postcss-import": {},
      "postcss-nested": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config"
    ],
    "env": {
      "webextensions": true
    }
  },
  "stylelint": {
    "extends": "@minna-ui/stylelint-config",
    "rules": {
      "selector-max-id": null,
      "color-no-hex": null
    }
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "requirePragma": true
        }
      },
      {
        "files": "*.test.js",
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "jest": {
    "preset": "@minna-ui/jest-config",
    "setupFiles": [
      "<rootDir>/test/__setup__.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,html}",
      "!src/app.js",
      "!src/settings.js",
      "!src/template.html"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">11.0.0",
    "yarn": ">1.12.0"
  },
  "os": [
    "!win32",
    "darwin",
    "freebsd",
    "linux",
    "openbsd"
  ]
}
