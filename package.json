{
  "name": "new-tab",
  "version": "0.20.0",
  "description": "âš¡ A high-performance new tab page that gets you where you need to go faster.",
  "repository": "maxmilton/new-tab",
  "homepage": "https://github.com/maxmilton/new-tab",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "pnpm run prebuild && NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.mjs,.ts .",
    "lint:ts": "tsc --project test",
    "prebuild": "rm -rf dist; cp -r static dist",
    "test": "c8 --all --include=src --include=manifest.config.mjs --reporter=text --reporter=lcovonly uvu -r tsm -r \"$PWD\"/test/setup.ts test '\\.test\\.ts$'",
    "test:e2e": "node -r tsm test/e2e/index.ts",
    "zip": "sh -c 'test -z \"$(git status --porcelain)\"' && pnpm run lint && pnpm run test && pnpm run build && cd dist && zip ../chrome-extension.zip *"
  },
  "dependencies": {
    "stage1": "0.6.2"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.10",
    "@types/chrome": "0.0.217",
    "@types/node": "18.14.1",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "c8": "7.12.0",
    "ekscss": "0.0.13",
    "esbuild": "0.17.8",
    "esbuild-minify-templates": "0.10.0",
    "eslint": "8.34.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-unicorn": "45.0.2",
    "git-ref": "0.3.1",
    "happy-dom": "8.9.0",
    "kleur": "4.1.5",
    "lightningcss": "1.19.0",
    "nanospy": "0.5.0",
    "playwright-chromium": "1.30.0",
    "prettier": "2.8.4",
    "stylelint": "15.1.0",
    "stylelint-config-standard": "30.0.1",
    "tsm": "2.3.0",
    "typescript": "4.9.5",
    "uvu": "0.5.6"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  }
}
