{
  "private": true,
  "name": "new-tab",
  "version": "0.13.0",
  "description": "âš¡ A high performance new tab page that gets you where you need to go faster.",
  "homepage": "https://github.com/MaxMilton/new-tab",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "chrome",
    "google-chrome",
    "maxmilton",
    "ntp",
    "svelte"
  ],
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "APP_RELEASE=$(git describe --always --dirty=\"-dev\") NODE_ENV=production rollup --config",
    "prebuild": "rm -rf dist && mkdir dist && cp icon* dist",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint --ignore-path .gitignore **/*.{css,html} --cache",
    "lint:js": "eslint --ignore-path .gitignore --ext html,js .",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.8.3",
    "@minna-ui/eslint-config": "link:../../minna-ui/utils/eslint-config",
    "@minna-ui/jest-config": "link:../../minna-ui/utils/jest-config",
    "@minna-ui/pre-markup": "link:../../minna-ui/utils/pre-markup",
    "@minna-ui/pre-style": "link:../../minna-ui/utils/pre-style",
    "@minna-ui/rollup-plugins": "link:../../minna-ui/utils/rollup-plugins",
    "@minna-ui/stylelint-config": "link:../../minna-ui/utils/stylelint-config",
    "@types/chrome": "0.0.75",
    "@wearegenki/renovate-config": "1.0.0",
    "autoprefixer": "9.3.1",
    "chokidar": "2.0.4",
    "codecov": "3.1.0",
    "crass": "0.12.3",
    "eslint": "5.8.0",
    "jest": "23.6.0",
    "jest-puppeteer": "3.5.0",
    "postcss": "7.0.5",
    "postcss-import": "12.0.1",
    "postcss-nested": "4.1.0",
    "puppeteer-core": "1.10.0",
    "rollup": "0.67.0",
    "rollup-plugin-analyzer": "2.1.0",
    "rollup-plugin-svelte": "4.3.2",
    "sinon-chrome": "2.3.2",
    "stylelint": "9.7.1",
    "svelte": "2.15.3"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "babel": {
    "env": {
      "test": {
        "presets": ["@minna-ui/jest-config/babel-preset.js"]
      }
    }
  },
  "jest": {
    "preset": "@minna-ui/jest-config",
    "setupFiles": ["<rootDir>/test/__setup__.js"],
    "collectCoverageFrom": [
      "src/**/*.{js,html}",
      "!src/app.js",
      "!src/settings.js",
      "!src/template.html"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-nested": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config"
    ],
    "env": {
      "webextensions": true
    }
  },
  "stylelint": {
    "extends": "@minna-ui/stylelint-config",
    "rules": {
      "selector-max-id": null,
      "color-no-hex": null
    }
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  }
}
