{
  "version": "0.2.0",
  "configurations": [
    {
      // NOTE: Use `bun --inspect` to open a debug port.
      "name": "Attach to Bun",
      "type": "bun",
      "request": "attach",
      "url": "ws://localhost:6499/"
    },
    {
      "name": "bun <CURRENT_FILE>",
      "type": "bun",
      "request": "launch",
      "runtime": "bun",
      "runtimeArgs": [], // bun exec arguments
      "program": "${file}",
      "args": [], // program arguments
      "cwd": "${workspaceFolder}",
      "env": {},
      "strictEnv": false,
      "watchMode": false,
      "stopOnEntry": false,
      "noDebug": false // disable debugger (breakpoints will not be hit)
    },
    {
      "name": "bun test <CURRENT_FILE>",
      "type": "bun",
      "request": "launch",
      "runtimeArgs": ["test"],
      "program": "${file}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "bun test (all)",
      "type": "bun",
      "request": "launch",
      "runtimeArgs": ["run", "test"],
      "program": "--", // HACK: Workaround for bun extension needing "program"
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
