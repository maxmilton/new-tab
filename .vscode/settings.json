{
  "css.validate": false,
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "eslint.validate": ["html", "javascript", "markdown"],
  /**
   * Better syntax highlighting for PostCSS. Only covers `*.css` files;
   * component styles still use the CSS language (limitation in VS Code).
   */
  "files.associations": { "*.css": "scss" },
  "javascript.implicitProjectConfig.checkJs": true,
  "scss.validate": false,
  // recommended dictionary: https://github.com/WeAreGenki/dictionary
  "spellright.language": ["en_GB"],
  "spellright.documentTypes": [
    "css",
    "html",
    "javascript",
    "json",
    "jsonc",
    "markdown",
    "plaintext",
    "properties",
    "scss"
  ],
  "spellright.spellContext": "body code comments strings"
}
